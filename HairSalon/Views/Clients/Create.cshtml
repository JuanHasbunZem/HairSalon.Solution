@{
    Layout = "_Layout";
}

@model HairSalon.Models.Client

<h3> Add a new client for this stylist </h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.ContactInfo)
  @Html.TextBoxFor(model => model.ContactInfo)<br>

  @Html.LabelFor(model => model.Stylist)<br>
  @Html.DropDownList("StylistId")

  <input type="submit" value="Add new client" class="btn btn-default" />
}

<p>@Html.ActionLink("Show all clients", "Index")</p>