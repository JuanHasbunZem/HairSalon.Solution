@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h2>Edit: @Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StylistId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Availability)
  @Html.EditorFor(model => model.Availability)<br>

  @Html.LabelFor(model => model.Style)
  @Html.EditorFor(model => model.Style)<br>
  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Stylist list", "Index")</p>