@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3> Add a new Stylist</h3>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)<br>

  @Html.LabelFor(model => model.Availability)
  @Html.TextBoxFor(model => model.Availability)<br>

  @Html.LabelFor(model => model.Style)
  @Html.TextBoxFor(model => model.Style)<br>
  <input type="submit" value="Add new stylist" />
}

<p>@Html.ActionLink("Show all stylists", "Index")</p>